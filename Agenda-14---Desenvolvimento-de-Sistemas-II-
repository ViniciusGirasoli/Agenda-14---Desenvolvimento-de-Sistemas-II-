// Função para trocar da tela inicial para o padlet
function enterPadlet() {
  document.getElementById("welcome-screen").style.display = "none";
  document.getElementById("padlet-screen").classList.remove("hidden");
  loadNotes();
}

// Função para adicionar uma nota
function addNote() {
  const input = document.getElementById("note-input");
  const text = input.value.trim();

  if (text !== "") {
    const note = {
      id: Date.now(),
      content: text
    };
    saveNote(note);
    renderNote(note);
    input.value = "";
  } else {
    alert("Please write something before adding a note.");
  }
}

// Salva nota no localStorage
function saveNote(note) {
  const notes = JSON.parse(localStorage.getItem("notes") || "[]");
  notes.push(note);
  localStorage.setItem("notes", JSON.stringify(notes));
}

// Carrega todas as notas
function loadNotes() {
  const notes = JSON.parse(localStorage.getItem("notes") || "[]");
  notes.forEach(renderNote);
}

// Renderiza uma nota no mural
function renderNote(note) {
  const board = document.getElementById("board");
  const noteEl = document.createElement("div");
  noteEl.className = "note";
  noteEl.textContent = note.content;

  // Adiciona função de clique para remover a nota
  noteEl.onclick = () => {
    if (confirm("Delete this note?")) {
      noteEl.remove();
      deleteNote(note.id);
    }
  };

  board.appendChild(noteEl);
}

// Remove nota do localStorage
function deleteNote(id) {
  const notes = JSON.parse(localStorage.getItem("notes") || "[]");
  const filtered = notes.filter(n => n.id !== id);
  localStorage.setItem("notes", JSON.stringify(filtered));
}
